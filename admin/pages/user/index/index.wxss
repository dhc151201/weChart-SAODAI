.top-block .content{
  padding: 40rpx 40rpx 120rpx;
  z-index: 2;
}
.top-block .user-name{
  line-height: 1;
}

.main-nav{
  width: 686rpx;
  height: 168rpx;
  left: 32rpx;
  top: -84rpx;
  border-radius: 16rpx;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1)
}

.main-nav-item{
  width: 350rpx;
}
.main-nav-line{
  height: 48rpx;
  border-right: 1rpx solid rgb(244,244,244);
}
.main-nav-item image{
  width: 84rpx;
  height: 84rpx;
  display: block;
  margin: auto;
}

.nav-list{
  margin-top: 102rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 686rpx;
  margin-left: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1)
}
.nav-list-item{
  min-height: 100rpx;
}
.nav-list-item:not(:last-child)::after{
  content: "";
  display: block;
  position: absolute;
  left: 70rpx;
  bottom: 0;
  width: calc(100% - 76rpx);
  border-top: 1rpx solid rgb(224,224,224);
}
.left-image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.top-bg{
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 0;
}