.top-fixed{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
}

.upload-box{
  width: 192rpx;
  HEIGHT: 192rpx;
  margin: auto;
  background: rgb(245,245,245);
  border-radius: 6rpx;
  overflow: hidden;
}
.logo-image{
  width: 100%;
  height: 100%;
  z-index: 10;
  left: 0;
  top: 0;
}
textarea{
  width: 100%;
  line-height: 1.1;
}

.shopHoursList>text{
  width: 25%;
}


.shopImageList-box{
  flex-wrap: wrap;
}
.image-list{
  width: 144rpx;
  height: 144rpx;
  margin: 13rpx 13rpx;
  border-radius: 8rpx;
  overflow: visible;
}
.up-controller{
  background: rgb(240, 241, 246);
  box-sizing: border-box;
}
.up-controller .iconfont{
  font-size: 50rpx;
}
.remove-shopImage{
  top: -8rpx;
  right: -8rpx;
  z-index: 1;
  background: rgba(0,0,0,.5);
  color: #fff;
  border-radius: 40rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
}