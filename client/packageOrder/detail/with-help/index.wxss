.order-goods-panel{
    border-top-left-radius: 0 !important;
    border-top-right-radius: 0 !important;
    padding-top: 144rpx;
}
.panel{
    border-radius: 16rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,.05);
}
.line{
    border-top: 1rpx solid rgb(224,224,224);
    padding-bottom: 18rpx;
}
.order-goods-panel .line{
    padding-bottom: 0;
}

.label{
    width: 160rpx;
}

.triper-bar{
    padding-top: 36rpx;
    padding-bottom: 36rpx;
    border-top: 1rpx solid rgb(224,224,224);
}
.tripuserPhone::before{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    height: 50rpx;
    border-left: 1rpx solid rgb(224,224,224);
}

.order-status-bg,
.order-status-bar{
    height: 144rpx;
    left: 0;
    top: 0;
    width: 100%;
}

.source-alt{
    border-radius: 16rpx;
    border-bottom-left-radius: 0;
    height: 28rpx;
    font-size: 20rpx;
    line-height: 28rpx;
    color: #fff;
    padding: 0 18rpx;
    top: -4rpx;
    background: rgb(255, 94, 75);
}


  .btn{
    width: 192rpx;
    font-size: 32rpx;
    height: 80rpx;
    border-radius: 80rpx;
    line-height: 80rpx;
    margin: 10rpx 0;
  }
  .sure-successed{
      width: 386rpx;
  }
  .btn+.btn,
  .sure-successed{
      margin-right: 30rpx;
  }
  .number{
    font-size: 40rpx;
    top: 2rpx;
  }
  .left{
    border-top-right-radius: 0rpx;
    border-bottom-right-radius: 0rpx;
  }
  .right{
    border-top-left-radius: 0rpx;
    border-bottom-left-radius: 0rpx;
  }