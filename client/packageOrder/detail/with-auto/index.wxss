.order-goods-panel{
    border-top-left-radius: 0 !important;
    border-top-right-radius: 0 !important;
    padding-top: 144rpx;
}
.panel{
    border-radius: 16rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,.05);
}
.line{
    border-top: 1rpx solid rgb(224,224,224);
    padding-bottom: 18rpx;
}
.order-goods-panel .line{
    padding-bottom: 0;
}

.label{
    width: 160rpx;
}

.triper-bar{
    padding-top: 36rpx;
    padding-bottom: 36rpx;
    border-top: 1rpx solid rgb(224,224,224);
}
.tripuserPhone::before{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    height: 50rpx;
    border-left: 1rpx solid rgb(224,224,224);
}

.order-status-bg,
.order-status-bar{
    height: 144rpx;
    left: 0;
    top: 0;
    width: 100%;
}

  .btn{
    width: 192rpx;
    font-size: 32rpx;
    height: 80rpx;
    border-radius: 80rpx;
    line-height: 80rpx;
    margin: 10rpx 0;
  }
  .sure-successed{
      width: 280rpx;
  }
  .btn+.btn,
  .sure-successed{
      margin-right: 30rpx;
  }
  .number{
    font-size: 40rpx;
    top: 2rpx;
  }
  .left{
    border-top-right-radius: 0rpx;
    border-bottom-right-radius: 80rpx;
  }
  .right{
    border-top-left-radius: 80rpx;
    border-bottom-left-radius: 80rpx;
  }

  .order-refundDetail{
      width: 120rpx;
      height: 40rpx;
      line-height: 40rpx;
      background: #fff;
      border-radius: 40rpx;
  }
  .find-order-notice{
      bottom: 0;
      left: 0;
      width: 100%;
      background: rgba(255,255,255, .95);
  }