.top{
    height: 208rpx;
    width: 100vw;
    overflow: hidden;
}
.shop-cover-pic{
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.top-info{
    height: 208rpx;
    background: rgba(0,0,0,.5);
    padding: 48rpx 32rpx 0;
}

.tab-box{
    width: 650rpx;
    top: 28rpx;
    /* overflow-x: auto; */
    /* overflow-y: hidden; */
    margin-left: -28rpx;
    /* margin-right: 82rpx; */
    /* padding-right: 122rpx; */
    word-break: keep-all;
    height: 82rpx;
    z-index: 100;
}
.tab-box::after{
    content: "";
    display: block;
    right: 0;
    top: 0;
    position: absolute;
    width: 80rpx;
    height: 100%;
    /* background: -webkit-linear-gradient(left, rgba(0, 0, 0, 0), rgb(0,0,0) );  */
}
.tab-item{
    position: relative;
    z-index: 10;
    padding: 12rpx;
    border-bottom: 6rpx solid transparent;
    box-sizing: border-box;
    /* display: block; */
}
.tab-item:first-child{
    /* margin-left: 12rpx; */
}
.tab-item.active{
    position: relative;
    color: rgb(255, 172, 26);
    border-bottom-color: rgb(255, 172, 26);
}
