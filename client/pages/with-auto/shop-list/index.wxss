.more-item{
    right: -16rpx;
    bottom: -16rpx;
    /* background: #fff; */
    z-index: 1;
    position: absolute;
}


.shop-list-box{
    border-radius: 20rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,.1);
    min-height: calc(100vh - 208rpx - 64rpx);
    box-sizing: border-box;
}
.shop-list-box.has-list{
    min-height: calc(100vh - 208rpx - 264rpx);
}
.shop-list{
    padding: 40rpx 0;
}
.shop-list:not(:last-child){
    border-bottom: 1rpx solid rgb(224,224,224);
}
.title{
    padding-left: 16rpx;
}
.title::before{
    content: "";
    display: block;
    left: 0;
    top: 8rpx;
    height: 32rpx;
    position: absolute;
    border-left: 8rpx solid rgb(255, 172, 26);
}


.no-data-placeholder{
    padding-top: 15vh;
}
  
  