@import './../../assets/wxss/base.wxss';
@import './../../assets/iconfont/iconfont.wxss';

.order-box{
    border-radius: 16rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,.05);
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-top: 24rpx;
    margin-bottom: 24rpx;
}

.from-to-line{
    width: 24rpx;
    height: 12rpx;
}

.status{
    font-size: 24rpx;
}
.goods-num{
    bottom: 0;
    right: 0;
    padding: 1rpx 6rpx;
    background: rgba(0,0,0,.5);
    color: #fff;
    border-bottom-right-radius: 10rpx;
}

.order-footer{
    border-top: 1rpx solid rgb(224,224,224);
}

.btn{
    margin: 0;
    border-radius: 56rpx;
    height: 56rpx;
    line-height: 56rpx;
}
.btn+.btn{
    margin-left: 16rpx;
}
.btn.default{
    background: transparent;
    border: 1rpx solid rgb(224,224,224);
}