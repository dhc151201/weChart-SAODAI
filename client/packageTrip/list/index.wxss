.trip-list{
    margin: 0 32rpx;
    border-radius: 16rpx;
    border: 2px solid #fff;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,.05);
}
.trip-list:not(:first-child){
    margin-bottom: 24rpx;
}
.trip-list.active{
    border-color: rgb(255, 229, 139);
}

.bg-success-ease{
    height: 56rpx;
    line-height: 56rpx;
    display: inline-block;
    border-radius: 32rpx;
    white-space: nowrap;


}

.triper-item{
    border-radius: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 12rpx;
    background: rgba(255 ,94, 75, 0.4);
}

.my-city-alt{
    background: rgb(189, 189, 189);
    border-top-left-radius: 18rpx;
    border-top-right-radius: 18rpx;
    border-bottom-right-radius: 18rpx;
    height: 32rpx;
    padding: 0 16rpx;
    line-height: 32rpx;
    top: -4rpx;
}

.destCityName{
    width: 260rpx;
}
.recomend-pic{
    left: -10rpx;
    top: -10rpx;
    width: 88rpx;
    height: 78rpx;
}